.mine {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFEDD8 0%, #FFE0BC 100%);
}

.mine .contentBox {
  display: flex;
  justify-content: center;
}

.mine .contentBox .content {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.mine .contentBox .content .people {
  width: 100%;
  display: flex;
  align-items: center;
  margin: 56rpx 0 0;
}

.mine .contentBox .content .people .portrait {
  width: 120rpx;
  height: 120rpx;
}

.mine .contentBox .content .people .portrait image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.mine .contentBox .content .people .info {
  display: flex;
  flex-direction: column;
  margin: 0 0 0 16rpx;
}

.mine .contentBox .content .people .info .name {
  font-size: 32rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 600;
  color: #000000;
}

.mine .contentBox .content .people .info .phone {
  font-size: 28rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #000000;
  margin: 12rpx 0 0;
}

.mine .contentBox .content .information {
  width: 89%;
  margin: 65rpx 0 0;
  display: flex;
  justify-content: space-between;
}

.mine .contentBox .content .information .tiger_card,
.mine .contentBox .content .information .role_card {
  display: flex;
  align-items: center;
}

.mine .contentBox .content .information .tiger_card .title,
.mine .contentBox .content .information .role_card .title {
  font-size: 32rpx;
  font-family: PingFang SC-Regular, PingFang SC;
  font-weight: 400;
  color: #A40000;
}

.mine .contentBox .content .information .tiger_card .number,
.mine .contentBox .content .information .role_card .number {
  font-size: 32rpx;
  font-family: PingFang SC-Semibold, PingFang SC;
  font-weight: 500;
  color: #A40000;
  margin: 0 0 0 20rpx;
}

.mine .contentBox .content .operation {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0 0;
}

.mine .contentBox .content .operation .operation-hover {
  background: rgba(255, 224, 188, 0.3);
}

.mine .contentBox .content .operation .record,
.mine .contentBox .content .operation .introduce,
.mine .contentBox .content .operation .wallpaper,
.mine .contentBox .content .operation .music {
  width: 100%;
  height: 104rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid rgba(164, 0, 0, 0.2);
}

.mine .contentBox .content .operation .record .title,
.mine .contentBox .content .operation .introduce .title,
.mine .contentBox .content .operation .wallpaper .title,
.mine .contentBox .content .operation .music .title {
  font-size: 32rpx;
  font-family: PingFang SC-Medium, PingFang SC;
  font-weight: 500;
  color: #A40000;
}