.cardRecord-container {
  width: 100%;
  min-height: 100vh;
  padding: 26rpx 0 140rpx;
  background: linear-gradient(180deg, #FFEDD8 0%, #FFE0BC 100%);
}

.cardRecord-main {
  width: 100%;
  display: flex;
  justify-content: center;
}

.content {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topTab {
  width: 100%;
  display: flex;
}

.tabItem {
  flex: 1;
  height: 104rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tabItem-content {
  /* padding: 0 48rpx; */
  width: 220rpx;
  text-align: center;
  height: 68rpx;
  border-radius: 82rpx;
  color: #A40000;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 68rpx;
}

.tabItem-content-active {
  background: #FFB9A9;
}

.recordBox {
  width: 100%;
  margin-top: 22rpx;
}

.recordItem {
  width: 100%;
  height: 104rpx;
  border-bottom: 2px solid rgba(164, 0, 0, 0.1);
  padding: 16rpx 0 22rpx;
}

.cardName {
  width: 100%;
  font-size: 28rpx;
  color: #A40000;
  font-weight: 500;
  line-height: 40rpx;
  word-wrap: break-word;
}

.cardName text {
  margin-left: 30rpx;
}

.time {
  margin-top: 2rpx;
  width: 100%;
  font-size: 24rpx;
  color: #DA7777;
  font-weight: 400;
  line-height: 1;
}

.emptyImage .van-empty .van-empty__description {
  color: #A40000;
}