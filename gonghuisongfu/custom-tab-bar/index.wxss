.tbb {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 800;
  background-image: linear-gradient(to bottom, #F31818, #AF0900);
  border-radius: 32rpx 32rpx 0 0;
  box-sizing: content-box;
  border-top: 1rpx solid rgba(254, 145, 40, 0.5);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: content-box;
  flex-direction: column;
  z-index: 820;
}

.view-active {
  box-sizing: content-box;
  opacity: 0.8;
}

.tab-bar-item image {
  width: 42rpx;
  height: 42rpx;
  box-sizing: content-box;
  z-index: 820;
}

.text {
  margin-top: 8rpx;
  font-size: 20rpx;
  box-sizing: content-box;
  line-height: 1;
  z-index: 820;
}

.add1 {
  margin-top: -32rpx;
  box-sizing: content-box;
  z-index: 999;
}

.add1 image {
  width: 130rpx;
  height: 130rpx;
  background-color: rgba(248, 242, 192, 1);
  box-sizing: content-box;
  border-radius: 50%;
  z-index: 999;
}

